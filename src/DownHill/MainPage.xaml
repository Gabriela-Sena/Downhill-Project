<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DownHill.MainPage">

    <ScrollView> 
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button Text="Navegar para Cadastro Atletas" 
                Clicked="OnNavigateToCadastroCorredoresButtonClicked" />

        <Button Text="Visualizar Atletas" 
                Clicked="OnViewCorredoresButtonClicked" />

        <Button Text="Navegar para Cadastro de Corridas" 
            Clicked="OnNavigateToCadastroCorridaButtonClicked" />

            <Button Text="Visualizar Corridas" 
            Clicked="OnNavigateToVisualizarCorridasButtonClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
